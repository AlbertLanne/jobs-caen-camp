{
    "name": "cc-jobboard-api",
    "version": "1.0.0",
    "description": "Backend part of the caencamp jobboard",
    "license": "GPL-3.0",
    "author": "Alexis Janvier <contact@alexisjanvier.net>",
    "homepage": "https://github.com/CaenCamp/jobs-caen-camp#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CaenCamp/jobs-caen-camp.git"
    },
    "scripts": {
        "dev": "nodemon --watch src src/index.js",
        "start": "nodemon --watch src src/index.js",
        "openapi:bundle": "swagger-cli bundle ./openapi/openapi.yaml -o ./openapi/openapi.json -r",
        "openapi:check": "spectral lint ./openapi/openapi.yaml",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "migrate:latest": "knex migrate:latest",
        "migrate:rollback": "knex migrate:rollback",
        "migrate:up": "knex migrate:up",
        "migrate:down": "knex migrate:down",
        "migrate:list": "knex migrate:list",
        "migrate:create": "knex migrate:make"
    },
    "bugs": {
        "url": "https://github.com/CaenCamp/jobs-caen-camp/issues"
    },
    "dependencies": {
        "convict": "5.2.0",
        "koa": "2.11.0",
        "koa-router": "8.0.8",
        "koa-static": "5.0.0",
        "lodash.omit": "4.5.0",
        "lodash.pick": "4.4.0",
        "signale": "1.4.0"
    },
    "devDependencies": {
        "@stoplight/spectral": "5.2.0",
        "knex": "0.20.11",
        "pg": "7.18.2"
    }
}
