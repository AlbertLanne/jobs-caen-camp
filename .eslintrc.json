{
    "env": {
        "cypress/globals": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:cypress/recommended",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["cypress", "jest"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "prefer-expect-assertions": 0,
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
