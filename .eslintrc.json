{
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2019
    },
    "plugins": ["prettier", "cypress", "jest"],
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:prettier/recommended",
        "plugin:react/recommended",
        "plugin:testing-library/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style"
    ],
    "rules": {
        "prefer-expect-assertions": 0
    },
    "settings": {
        "react": {
            "version": "16.13.1"
        }
    }
}
