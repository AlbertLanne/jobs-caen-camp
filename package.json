        "@testing-library/cypress": "5.3.0",
        "@testing-library/jest-dom": "5.1.1",
        "@testing-library/svelte": "1.11.0",
        "adr-tools": "2.0.4",
        "babel-jest": "25.2.6",
        "cross-env": "7.0.2",
        "css-loader": "3.4.2",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.10.1",
        "eslint-plugin-cypress": "2.10.3",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-prettier": "3.1.2",
