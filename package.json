        "@testing-library/jest-dom": "4.2.4",
        "@testing-library/svelte": "1.11.0",
        "babel-jest": "24.9.0",
        "cypress": "3.8.1",
        "eslint": "6.8.0",
        "eslint-config-prettier": "6.9.0",
        "eslint-plugin-jest": "23.2.0",
        "eslint-plugin-prettier": "3.1.2",
        "eslint-plugin-svelte3": "2.7.3",
        "frisby": "2.1.2",
        "husky": "3.1.0",
        "jest": "24.9.0",
        "jest-transform-svelte": "2.1.0",
        "lint-staged": "9.5.0",
        "nodemon": "2.0.2",
