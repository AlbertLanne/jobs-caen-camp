{
    "name": "cc-jobboard",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "apps/*"
    ],
    "homepage": "https://github.com/CaenCamp/jobs-caen-camp#readme",
    "devDependencies": {
        "@commitlint/cli": "8.2.0",
        "@commitlint/config-conventional": "8.2.0",
        "eslint": "6.8.0",
        "husky": "3.1.0",
        "lint-staged": "9.5.0",
        "prettier": "1.19.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,css,json,md}": [
            "prettier --write",
            "git add"
        ],
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    }
}
